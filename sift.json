{
  "name": "sift-jitmail",
  "display-name": "Timely Mail Sift",
  "description": "Email smarter. With the Timely Mail Sift you can schedule emails to be sent at a specific time and clear your inbox by scheduling emails to be brought back to your inbox when you want to deal with them.",
  "author": "Randal Pinto",
  "version": "1.0.0",
  "icon": "assets/icon.svg",
  "subtitle": "Emails when you need them",
  "marketing": {
    "screenshots": [
      "assets/screenshot-0.png",
      "assets/screenshot-1.png",
      "assets/screenshot-2.png",
      "assets/screenshot-3.png"
    ],
    "links": [
      {
        "label": "Github",
        "type": "github",
        "url": "https://github.com/redsift/sift-jitmail"
      }
    ]
  },
  "interfaces": {
    "email": {
      "thread": {
        "controller": "dist/js/controller.umd-es2015.min.js"
      },
      "compose": {
        "controller": "dist/js/controller.umd-es2015.min.js"
      },
      "client": {
        "controller": "dist/js/email-client-controller.umd-es2015.min.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs": {
      "emails": {
        "all-emails": {
          "filter": {
            "conditions": [
              {
                "from": {
                  "regexp": {
                    "pattern": ".*",
                    "flags": "i"
                  }
                }
              },
              {
                "date": "between now and 1 week before now"
              }
            ],
            "operator": "AND"
          },
          "wants": [
            "archive",
            "htmlBody"
          ],
          "inMailbox": "inbox"
        }
      },
      "webhooks": {
        "oauth-wh": {
          "inbound": {
            "uri": "{key}/{value}"
          }
        },
        "snooze-wh": {
          "inbound": {
            "uri": "{key}/{value}"
          }
        },
        "sendlater-wh": {
          "inbound": {
            "uri": "{key}/{value}"
          }
        }
      }
    },
    "nodes": [
      {
        "#": "Map",
        "implementation": {
          "javascript": "server/map.js"
        },
        "input": {
          "bucket": "all-emails"
        },
        "outputs": {
          "threads": {}
        }
      },
      {
        "#": "Snooze",
        "implementation": {
          "javascript": "server/snooze.js"
        },
        "input": {
          "bucket": "snooze-wh",
          "lookup": [
            {
              "bucket": "oauth",
              "key": "google"
            }
          ]
        },
        "outputs": {
          "snoozed": {},
          "threads": {},
          "state": {}
        }
      },
      {
        "#": "Wake Up Cron",
        "implementation": {
          "javascript": "server/wakeup.js",
          "when": {
            "crontab": "0,15,30,45 * * * *"
          }
        },
        "input": {
          "bucket": "snoozed",
          "select": "*",
          "lookup": [
            {
              "bucket": "oauth",
              "key": "google"
            }
          ]
        },
        "outputs": {
          "snoozed": {
            "ttl": 30
          },
          "threads": {}
        }
      },
      {
        "#": "Snoozed Calendar",
        "implementation": {
          "javascript": "server/calendar.js"
        },
        "input": {
          "bucket": "snoozed",
          "select": "*"
        },
        "outputs": {
          "snoozedcal": {}
        }
      },
      {
        "#": "Send Later",
        "implementation": {
          "javascript": "server/sendlater.js"
        },
        "input": {
          "bucket": "sendlater-wh",
          "lookup": [
            {
              "bucket": "oauth",
              "key": "google"
            }
          ]
        },
        "outputs": {
          "sendlater": {},
          "threads": {},
          "messages": {},
          "state": {}
        }
      },
      {
        "#": "Sender Cron",
        "implementation": {
          "javascript": "server/sender.js",
          "when": {
            "crontab": "0,15,30,45 * * * *"
          }
        },
        "input": {
          "bucket": "sendlater",
          "select": "*",
          "lookup": [
            {
              "bucket": "oauth",
              "key": "google"
            }
          ]
        },
        "outputs": {
          "sendlater": {
            "ttl": 30
          },
          "threads": {},
          "messages": {}
        }
      },
      {
        "#": "Sender Calendar",
        "implementation": {
          "javascript": "server/calendar.js"
        },
        "input": {
          "bucket": "sendlater",
          "select": "*"
        },
        "outputs": {
          "sendlatercal": {}
        }
      },
      {
        "#": "OAuth",
        "implementation": {
          "javascript": "server/oauth.js"
        },
        "input": {
          "bucket": "oauth-wh"
        },
        "outputs": {
          "state": {},
          "oauth": {}
        }
      },
      {
        "#": "Setup",
        "implementation": {
          "javascript": "server/setup.js"
        },
        "input": {
          "bucket": "oauth",
          "select": "google"
        },
        "outputs": {
          "state": {}
        }
      }
    ],
    "stores": {
      "snoozed": {
        "key$schema": "string"
      },
      "sendlater": {
        "key$schema": "string"
      },
      "oauth": {
        "key$schema": "string"
      },
      "stats": {
        "key$schema": "string"
      }
    },
    "outputs": {
      "exports": {
        "threads": {
          "import": "_email.tid"
        },
        "messages": {
          "import": "_email.id"
        },
        "sendlatercal": {
          "key$schema": "string"
        },
        "snoozedcal": {
          "key$schema": "string"
        },
        "state": {
          "key$schema": "string"
        }
      }
    }
  }
}
